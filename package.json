{
  "name": "typescript-webpack-starter",
  "version": "0.2.0",
  "description": "A damn simple starter for Typescript and Webpack",
  "main": "src/index.ts",
  "scripts": {
    "rimraf": "rimraf",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run rimraf -- dist",
    "build:dev": "webpack --config config/webpack/webpack.dev.js --progress --profile --color --display-error-details --display-cached",
    "prebuild:prod": "npm run rimraf -- dist",
    "build:prod": "webpack --config config/webpack/webpack.prod.js  --progress --profile --color --display-error-details --display-cached --bail",
    "server": "npm run server:dev",
    "server:dev": "webpack-dashboard -- webpack-dev-server --config config/webpack/webpack.dev.js --port 3000 --host 0.0.0.0 --hot --inline --progress --profile --watch --content-base dist/",
    "serverreload": "webpack-dashboard -- webpack-dev-server --config config/webpack/webpack.dev.js --port 3000 --host 0.0.0.0 --inline --progress --profile --watch --content-base dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "typings i"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emyann/typescript-webpack-starter"
  },
  "author": "yrenaudin",
  "license": "ISC",
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/node": "^6.0.59",
    "@types/systemjs": "^0.19.33",
    "autoprefixer": "^6.6.1",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.25.0",
    "ejs-loader": "^0.3.0",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "file-loader": "^0.11.0",
    "handlebars-webpack-plugin": "^0.1.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "node-sass": "^4.2.0",
    "postcss-loader": "^1.2.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "^2.1.4",
    "typings": "^1.3.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.0-rc.3",
    "webpack-dashboard": "^0.1.8",
    "webpack-dev-server": "^1.15.2",
    "webpack-livereload-plugin": "^0.9.0"
  },
  "dependencies": {
    "handlebars-template-loader": "^0.7.0",
    "lodash": "^4.15.0",
    "moment": "^2.18.1",
    "mustache-loader": "^0.4.1"
  }
}
